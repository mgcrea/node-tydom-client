{
  "name": "tydom-client",
  "version": "0.6.0",
  "description": "Easily manage Tydom hardware by Delta Dore from Node.js",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Olivier Louvignes <olivier@mgcrea.io>",
  "repository": "github:mgcrea/node-tydom-client",
  "license": "MIT",
  "scripts": {
    "start": "yarn spec:watch",
    "test": "yarn pretty && yarn lint && yarn spec",
    "spec": "NODE_TLS_REJECT_UNAUTHORIZED=0 CI=true jest --runInBand --colors",
    "spec:watch": "yarn spec --watch",
    "spec:coverage": "yarn spec --coverage",
    "lint": "eslint --ext .ts src/",
    "pretty": "prettier --check '{src,test}/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "build": "yarn build:source && yarn build:typings",
    "build:source": "babel --source-maps --extensions .js,.ts --out-dir lib/ --delete-dir-on-start --ignore **/__tests__ src/",
    "build:typings": "tsc --declaration",
    "build:watch": "yarn build:source --watch --verbose",
    "prepare": "yarn build"
  },
  "dependencies": {
    "@babel/runtime": "^7.8.3",
    "debug": "^4.1.1",
    "http-parser-js": "^0.5.2",
    "node-fetch": "^2.6.0",
    "ws": "^7.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "7.8.3",
    "@babel/node": "7.8.3",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@types/debug": "^4.1.5",
    "@types/jest": "^25.1.1",
    "@types/node": "^13.5.2",
    "@types/node-fetch": "^2.5.4",
    "@types/ws": "^7.2.1",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "babel-plugin-module-name-mapper": "^1.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.1.0",
    "nock": "^11.7.2",
    "prettier": "^1.19.1",
    "typescript": "^3.7.5"
  }
}
