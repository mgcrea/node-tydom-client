{
  "name": "tydom-client",
  "version": "0.13.0",
  "description": "Easily manage Tydom hardware by Delta Dore from Node.js",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Olivier Louvignes <olivier@mgcrea.io>",
  "repository": "github:mgcrea/node-tydom-client",
  "license": "MIT",
  "scripts": {
    "start": "npm run spec:watch",
    "test": "npm run pretty && npm run lint && npm run spec",
    "spec": "NODE_TLS_REJECT_UNAUTHORIZED=0 CI=true jest --runInBand --colors",
    "spec:watch": "npm run spec --watch",
    "spec:coverage": "npm run spec --coverage",
    "lint": "eslint --ext .ts src/",
    "pretty": "prettier --check '{src,test}/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "build": "tsc --build",
    "prepublishOnly": "npm run build"
  },
  "bin": {
    "tydom": "lib/cli/tydom.js"
  },
  "dependencies": {
    "chalk": "^5.0.0",
    "debug": "^4.3.3",
    "got": "^11.8.2",
    "http-parser-js": "^0.5.5",
    "lodash": "^4.17.21",
    "source-map-support": "^0.5.21",
    "ws": "^8.4.2",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "@tsconfig/node10": "^1.0.8",
    "@types/debug": "^4.1.7",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.12",
    "@types/ws": "^8.2.2",
    "@types/yargs": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "babel-plugin-module-name-mapper": "^1.2.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.7",
    "nock": "^13.2.2",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  }
}
