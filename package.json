{
  "name": "tydom-client",
  "version": "0.11.5",
  "description": "Easily manage Tydom hardware by Delta Dore from Node.js",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Olivier Louvignes <olivier@mgcrea.io>",
  "repository": "github:mgcrea/node-tydom-client",
  "license": "MIT",
  "scripts": {
    "start": "yarn spec:watch",
    "test": "yarn pretty && yarn lint && yarn spec",
    "spec": "NODE_TLS_REJECT_UNAUTHORIZED=0 CI=true jest --runInBand --colors",
    "spec:watch": "yarn spec --watch",
    "spec:coverage": "yarn spec --coverage",
    "lint": "eslint --ext .ts src/",
    "pretty": "prettier --check '{src,test}/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "build": "yarn build:source && yarn build:typings && rsync -avh --remove-source-files lib/src/* lib/ && rm -rf lib/src",
    "build:source": "babel --source-maps --extensions .js,.ts --out-dir lib/ --delete-dir-on-start --ignore **/__tests__ src/",
    "build:typings": "tsc --declaration",
    "build:watch": "yarn build:source --watch --verbose",
    "prepare": "yarn build"
  },
  "bin": {
    "tydom": "lib/cli/tydom.js"
  },
  "dependencies": {
    "@babel/runtime": "^7.9.6",
    "chalk": "^4.0.0",
    "debug": "^4.1.1",
    "got": "^11.1.4",
    "http-parser-js": "^0.5.2",
    "lodash": "^4.17.15",
    "source-map-support": "^0.5.19",
    "ws": "^7.3.0",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "7.9.6",
    "@babel/node": "7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.6",
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@types/debug": "^4.1.5",
    "@types/jest": "^25.2.3",
    "@types/lodash": "^4.14.151",
    "@types/node": "^14.0.1",
    "@types/ws": "^7.2.4",
    "@types/yargs": "^15.0.5",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "babel-plugin-module-name-mapper": "^1.2.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.0.1",
    "nock": "^12.0.3",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.2"
  }
}
