{
  "name": "tydom-client",
  "version": "0.14.2",
  "description": "Easily manage Tydom hardware by Delta Dore from Node.js",
  "author": "Olivier Louvignes <olivier@mgcrea.io>",
  "repository": "github:mgcrea/node-tydom-client",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "start": "tsx src/cli/tydom.ts",
    "dev": "DEBUG=tydom-client tsx --inspect --watch src/cli/tydom.ts",
    "test": "pnpm run lint && pnpm run spec",
    "spec": "NODE_TLS_REJECT_UNAUTHORIZED=0 vitest run",
    "spec:watch": "NODE_TLS_REJECT_UNAUTHORIZED=0 vitest",
    "spec:coverage": "NODE_TLS_REJECT_UNAUTHORIZED=0 vitest run --coverage",
    "lint": "eslint src/ test/",
    "format": "prettier --write src/ test/",
    "check": "tsc --noEmit",
    "build": "tsup",
    "prepublishOnly": "pnpm run build"
  },
  "bin": {
    "tydom": "dist/cli/tydom.js"
  },
  "dependencies": {
    "debug": "^4.4.3",
    "got": "^14.6.5",
    "http-parser-js": "^0.5.10",
    "kolorist": "^1.8.0",
    "lodash-es": "^4.17.22",
    "ws": "^8.18.3",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@mgcrea/eslint-config-node": "^0.14.1",
    "@tsconfig/node20": "^20.1.8",
    "@tsconfig/strictest": "^2.0.8",
    "@types/debug": "^4.1.12",
    "@types/eslint": "^9.6.1",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^25.0.3",
    "@types/ws": "^8.18.1",
    "@types/yargs": "^18.0.0",
    "eslint": "^9.39.2",
    "nock": "^14.0.10",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@10.26.1"
}
